{{!
    @template mod_dataview/catalog

    This template renders the template content area for a resource.

    Example context (json):
    {}
}}

<div class="dataview-board">
    <div class="filter-box">
        <div class="search-box">
            <strong><label for="fulltext-query">{{#str}}fulltext, mod_dataview{{/str}}</label></strong>
            <input id="fulltext-query" class="form-control" type="text" name="q" value="" />
        </div>
        {{#fields}}
            <div class="one-filter type-{{type}}">
                <h3 class="filter-head">{{description}}</h3>
                <div class="filter-body">
                    {{{control}}}
                </div>
            </div>
        {{/fields}}
        <button class="filter-btn">{{#str}}filter, mod_dataview{{/str}} {{#pix}}i/search, core{{/pix}}</button>
    </div>
    <div class="records">
    </div>
</div>

<template id="dataview-tpl-itemlist">
    {{{listtemplate}}}
</template>

<template id="dataview-tpl-itemsingle">
    {{{singletemplate}}}
</template>

<template id="dataview-tpl-createmessage">
    <div>
        {{#str}}createmessage, mod_dataview{{/str}}
    </div>
</template>
